.navbar.navbar-default.navbar-fixed-top{ role: 'navigation' }
  .container-fluid
    .navbar-header
      %button.navbar-toggle{ type: 'button', 'data-toggle' => 'collapse', 'data-target' => '.navbar-collapse' }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'BTC Market Exchange', root_path, class: 'navbar-brand'

    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li= link_to 'Home', root_path
        %li.dropdown
          %a.dropdown-toggle{ href: '#', 'data-toggle' => 'dropdown' }
            Markets
            %b.caret
          %ul.dropdown-menu
            - markets.each do |market|
              %li= link_to market.name, market_path(market)

        %li.dropdown
          %a.dropdown-toggle{ href: '#', 'data-toggle' => 'dropdown' }
            Exchanges
            %b.caret
          %ul.dropdown-menu
            - exchanges.each do |exchange|
              %li= link_to exchange.name, exchange_path(id: exchange, market: exchange.markets.first)