.row
  .col-md-offset-3.col-md-6.col-sm-12

    %h2.center-block  Forgot your password?

    = form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' } do |f|
      .form-group
        = devise_error_messages!

      .form-group
        = f.label :email, class: 'col-sm-2'
        .col-sm-10
          = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter email'

      .form-group
        .col-sm-offset-2.col-sm-10
          = f.submit 'Send me reset password instructions', class: 'btn btn-lg btn-primary'

      = render 'devise/shared/links'