.row
  .col-md-offset-3.col-md-6.col-sm-12

    %h2.center-block  Sign in

    = form_for resource, as: resource_name, url: session_path(resource_name), html: { role: 'form', class: 'form-horizontal' } do |f|
      .form-group
        = devise_error_messages!

      .form-group
        = f.label :email, class: 'col-sm-2'
        .col-sm-10
          = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter email'

      .form-group
        = f.label :password, class: 'col-sm-2'
        .col-sm-10
          = f.password_field :password, class: 'form-control', placeholder: 'Password'

      - if devise_mapping.rememberable?
        .checkbox
          = f.label :remember_me
          = f.check_box :remember_me

      .form-group
        .col-sm-offset-2.col-sm-10
          = f.submit 'Sign in', class: 'btn btn-lg btn-primary'

      = render 'devise/shared/links'